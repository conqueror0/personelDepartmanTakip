@using CoreDepartman.Models
@model List<personal>
@{
    ViewData["Title"] = "BirimDetay";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br/>
<h2>@ViewBag.brm</h2>
<br/>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Ad</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>İşe Giriş Tarihi</th>
        <th>Yıllık İzin Hakkı</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.perid</td>
            <td>@x.ad</td>
            <td>@x.soyad</td>
            <td>@x.şehir</td>
            <td>@x.iseGirisTarihi</td>
            <td>@x.yillikizinhakki</td>
        </tr>
    }
</table>