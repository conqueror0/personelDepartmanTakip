@model CoreDepartman.Models.departmanlar
@{
    ViewData["Title"] = "DepartmanGetir";
    Layout = "~/Views/Shared/_TestLayout.cshtml";
}

<br/>
@using (Html.BeginForm("DepartmanGuncelle", "depart", FormMethod.Post))
{
    <b>Departman ID</b>
    @Html.TextBoxFor(x => x.id, new { @class = "form-control" })
    <br />
    <b>Departman Adı</b>
    @Html.TextBoxFor(x => x.departmanAd, new { @class = "form-control" })
    <br />
    <button class="btn btn-default" style="background-color:#ff6a00"; color:black;>Departman Güncelle</button>
}